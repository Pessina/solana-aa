{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2023"],
    "module": "NodeNext",
    "target": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}